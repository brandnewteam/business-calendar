{
  "name": "business-calendar",
  "version": "0.0.1",
  "description": "luxon wrapper for business days functionality",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:cjs": "esbuild src/index.js --bundle --platform=node --format=cjs --external:luxon --outfile=dist/index.js",
    "build:esm": "esbuild src/index.js --bundle --platform=node --format=esm --external:luxon --outfile=dist/index.mjs",
    "build:types": "cp src/index.d.ts dist/index.d.ts",
    "build:wrapper": "cp src/index.cjs.js dist/index.cjs.js",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types && npm run build:wrapper"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brandnewteam/business-calendar.git"
  },
  "author": "3D Print <automation@3dprint.sm>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brandnewteam/business-calendar/issues"
  },
  "homepage": "https://github.com/brandnewteam/business-calendar#readme",
  "peerDependencies": {
    "luxon": "3.x.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.22.0",
    "globals": "^16.0.0"
  }
}